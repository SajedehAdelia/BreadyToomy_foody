<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="TextBoxBaseControlTemplate" TargetType="{x:Type TextBoxBase}">
        <Border Background="LightGray" x:Name="Bd" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="12" Height="27" Padding="4">
            <ScrollViewer x:Name="PART_ContentHost"/>
        </Border>
    </ControlTemplate>
    <ControlTemplate x:Key="CheckBoxBaseControlTemplate" TargetType="{x:Type CheckBox}">
        <Border Background="LightGray" x:Name="Bd" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="12">
            <ScrollViewer x:Name="PART_ContentHost"/>
        </Border>
    </ControlTemplate>
</ResourceDictionary>